{
  "manifest_version": 3,
  "name": "FocusBlock Shield",
  "version": "1.0.0",
  "description": "Blocks distracting websites whenever your FocusBlock schedules are active.",
  "permissions": ["storage", "tabs", "webNavigation"],
  "host_permissions": ["<all_urls>", "http://localhost:4000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "FocusBlock Shield"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
